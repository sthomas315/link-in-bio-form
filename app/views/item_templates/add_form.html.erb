<h1>Add a new item</h1>

<form action="/user_item" method="post">
  <div>
    <label for="url"> Link URL </label>

    <input id="url" name="first_url" placeholder="Enter a URL..." type="text">
  </div>

  <div>
    <label for="description"> Link Description </label>

    <input id="description" name="link_description" placeholder="Enter a link description..." type="text">
  </div>

  <div>
    <label for="thumbnail">Thumbnail URL</label>

    <input id="thumbnail" name="last_url" placeholder="Enter a thumbnail URL..." type="text">
  </div>

  <button>Create item</button>

</form>  
